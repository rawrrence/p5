<% if @dojos.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
  			<th>City</th>
        <th>Members</th>
      </tr>
    </thead>
    <tbody>
      <% @dojos.each do |d| %>
        <tr>
          <td><%= link_to d.name, dojo_path(d) %></td>
          <td><%= d.city  %>, <%= d.state %></td>
          <td><%= d.students.count %></td>
  				<td>
            <%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_dojo_path(d), :class => 'btn btn-mini' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="flickr_pagination">
    <div clas="page_info">
      <%= page_entries_info @dojos %>
    </div>
    <%= will_paginate @dojos, :previous_label => "← Previous&nbsp;", :next_label => "&nbsp;Next →" %>
  </div>
<% end %>
