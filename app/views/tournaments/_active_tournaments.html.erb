<% if @tournaments.empty? %>
  &nbsp;&nbsp;<em>None at this time</em>
<% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date</th>
        <th>Ranks</th>
      </tr>
    </thead>
    <tbody>
      <% @tournaments.each do |t| %>
        <tr>
          <td><%= link_to t.name, tournament_path(t) %></td>
          <td><%= t.date %></td>
          <td><%= rank_range_for(t) %></td>
          <td>
            <%= link_to raw("<i class='icon-pencil'></i> Edit"), edit_tournament_path(t), :class => 'btn btn-mini' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="flickr_pagination">
    <div clas="page_info">
      <%= page_entries_info @tournaments %>
    </div>
    <%= will_paginate @tournaments, :previous_label => "← Previous&nbsp;", :next_label => "&nbsp;Next →" %>
  </div>
<% end %>
