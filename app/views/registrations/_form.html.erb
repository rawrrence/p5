<%= simple_form_for @registration, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Registration</legend>
		
		<%= f.input :section_id, :collection => Section.active.alphabetical.collect{ |s| [s.event.name, s.id]}, :disabled => true %>
		<%= f.input :student_id, :collection => Student.active.alphabetical.collect{ |s| [s.proper_name, s.id]}, :disabled => true %>
    <%= f.input :fee_paid %>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', sections_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>